
{% extends 'base.html.twig' %}

{% block title %}
  {{ parent() }} - Liste appareils photo
{% endblock %}

{% block body %}

<div class="container my-5">
  
  <h2 class="text-center mb-5 fw-normal" style="font-size: 2rem;">Catalogue d'appareils photo</h2>

  <div class="row row-cols-1 row-cols-md-4 g-4">
    {% for camera in cameras %}
      <div class="col mb-4"> 
        <a href="{{ path('app_camera_show', {'id': camera.id}) }}">
          {% include 'camera/card.html.twig' with {'camera': camera} %}
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% endblock %}
